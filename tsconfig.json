{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "src",
    "outDir": "dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "paths": {
      "./*": ["*"]
    }
  },

  "include": [
    ".eslintrc.js",
    "src/**/*"
  ]
}
